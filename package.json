{
  "name": "aem-react-js",
  "version": "0.2.2",
  "description": "Aem components with React.",
  "scripts": {
    "preinstall": "npm install typescript & tsd install",
    "test": "npm run lint &&  mocha --compilers ts:espower-typescript/guess test/*.ts",
    "lint": "tslint src/*.tsx",
    "postinstall": "npm run build",
    "prepublish": "tsd install && tsc --declaration && npm test",
    "preversion": "npm test",
    "version": "git add .",
    "build": "tsc",
    "clean": "rm -fr *.js *.js.map component typings"
  },
  "keywords": [
    "aem",
    "cq5",
    "react",
    "cms",
    "typescript",
    "node"
  ],
  "repository": {
    "type": "git",
    "url": "http://www.github.com/sinnerschrader/aem-react-js"
  },
  "devDependencies": {
    "espower-typescript": "^3.0.0",
    "mocha": "^2.3.4",
    "power-assert": "^1.2.0",
    "tsd": "^0.6.5",
    "tslint": "^3.15.1",
    "typescript": "^1.8.10"
  },
  "dependencies": {
    "react": "^15.2.1",
    "react-dom": "^15.2.1"
  }
}
